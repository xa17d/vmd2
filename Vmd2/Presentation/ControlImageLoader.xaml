<UserControl x:Class="Vmd2.Presentation.ControlImageLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vmd2.Presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock>Folder:</TextBlock>
        <DockPanel>
            <Button DockPanel.Dock="Right" Width="20" Click="Button_SelectFolder_Click">...</Button>
            <TextBox Text="{Binding Path}"></TextBox>
        </DockPanel>
        <CheckBox IsChecked="{Binding CombineFilesToSlices}">Merge independent files</CheckBox>
    </StackPanel>
</UserControl>
