<UserControl x:Class="Vmd2.Presentation.Display"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:p="clr-namespace:Vmd2.Presentation"
             xmlns:local="clr-namespace:Vmd2.Presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="border" >
        <p:ZoomBorder ClipToBounds="True">
            <Canvas>
                <Image x:Name="image" Canvas.Left="0" Canvas.Top="0" MouseLeftButtonDown="image_MouseLeftButtonDown" />
                <Rectangle Width="5" Height="5" x:Name="marker" Stroke="AliceBlue"></Rectangle>
            </Canvas>
        </p:ZoomBorder>
    </Grid>
</UserControl>
