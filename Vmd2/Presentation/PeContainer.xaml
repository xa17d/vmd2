<UserControl x:Class="Vmd2.Presentation.PeContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vmd2.Presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <DockPanel>
            <Button Width="20" DockPanel.Dock="Right" x:Name="buttonRemove" Background="#FFFF6767" Click="buttonRemove_Click">X</Button>
            <Button Width="20" DockPanel.Dock="Right" x:Name="buttonDown" Click="buttonDown_Click">v</Button>
            <Button Width="20" DockPanel.Dock="Right" x:Name="buttonUp" Click="buttonUp_Click">^</Button>
            <TextBlock Text="{Binding Name}" Background="Silver" FontWeight="Bold"></TextBlock>
        </DockPanel>
        <ContentControl x:Name="container" Margin="5">
            
        </ContentControl>
    </StackPanel>
</UserControl>
